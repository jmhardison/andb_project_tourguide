<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/generalListTopLevelLayoutStyle">

    <ImageView
        android:id="@+id/image_view"
        style="@style/generalListImageViewStyle" />
    <LinearLayout style="@style/generalListSecondLevelLayoutStyle">
        <LinearLayout
            android:id="@+id/rightLinearLayout"
            style="@style/generalListThirdLevelLayoutStyle">
            <TextView
                android:id="@+id/name_text"
                tools:text="@string/generalListPlaceholderName"
                style="@style/generalListNameTextViewStyle" />

            <TextView
                android:id="@+id/description_text"
                tools:text="@string/generalListPlaceholderDescription"
                style="@style/generalListOtherTextViewStyle" />

            <TextView
                android:id="@+id/address_text"
                style="@style/generalListOtherTextViewStyle"
                tools:text="@string/generalListPlaceholderAddress" />

            <TextView
                android:id="@+id/phone_text"
                style="@style/generalListOtherTextViewStyle"
                tools:text="@string/generalListPlaceholderPhone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>